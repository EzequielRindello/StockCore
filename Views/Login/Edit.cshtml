@{
    ViewData["Title"] = "Edit user";
}

@model UserFormView

<div class="form-page">
    <h2>Edit User</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger py-2 px-3 mb-3">
            @ViewBag.ErrorMessage
        </div>
    }

    <form method="post" asp-action="Edit" asp-controller="Login" class="form-card mb-4">
        <input type="hidden" asp-for="User.Id" />

        <div class="mb-2">
            <label asp-for="User.UserName">Username</label>
            <input asp-for="User.UserName" class="form-control" />
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="User.Email">Email</label>
            <input asp-for="User.Email" type="email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div class="form-check mb-2">
            <input asp-for="User.IsActive" class="form-check-input" />
            <label asp-for="User.IsActive" class="form-check-label">Active</label>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>

    <br />

    <h2>Change Password</h2>
    <form asp-action="ChangePassword" asp-controller="Login" method="post" class="form-card">

        <input type="hidden" name="UserId" value="@Model.User.Id" />

        <div class="mb-2">
            <label for="NewPassword">New Password</label>
            <input type="password"
                   name="NewPassword"
                   id="NewPassword"
                   class="form-control"
                   required
                   minlength="6" />
        </div>

        <div class="mb-2">
            <label for="ConfirmPassword">Confirm Password</label>
            <input type="password"
                   name="ConfirmPassword"
                   id="ConfirmPassword"
                   class="form-control"
                   required
                   minlength="6" />
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-warning">Change Password</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}