@model UserFormView

<form method="post" class="form-card">
    <input type="hidden" asp-for="User.Id" />

    <div class="mb-2">
        <label asp-for="User.UserName"></label>
        <input asp-for="User.UserName" class="form-control" />
        <span asp-validation-for="User.UserName" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" type="email" class="form-control" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <div class="form-check mb-2">
        <input asp-for="User.IsActive" class="form-check-input" />
        <label asp-for="User.IsActive" class="form-check-label"></label>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-actions">
        <a asp-action="Index" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Save changes" : "Create user")
        </button>
    </div>
</form>
