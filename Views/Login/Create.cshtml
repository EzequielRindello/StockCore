@model UserFormView
<div class="form-page">
    <h2>Create User</h2>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger py-2 px-3 mb-3">
            @ViewBag.ErrorMessage
        </div>
    }

    <form method="post" asp-action="Create" asp-controller="Login" class="form-card">
        <div class="mb-2">
            <label asp-for="User.UserName">Username</label>
            <input asp-for="User.UserName" class="form-control" />
            <span asp-validation-for="User.UserName" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="User.Email">Email</label>
            <input asp-for="User.Email" type="email" class="form-control" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="User.Password">Password</label>
            <input asp-for="User.Password" type="password" class="form-control" />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-2">
            <input asp-for="User.IsActive" class="form-check-input" />
            <label asp-for="User.IsActive" class="form-check-label">Active</label>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-actions">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Create user</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}