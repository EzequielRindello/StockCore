@model List<StockMovementList>

<form asp-action="DeleteMany" method="post" id="deleteForm">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Product</th>
                <th>SKU</th>
                <th>Quantity</th>
                <th>Type</th>
                <th>Reason</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@s.Id" class="row-check" />
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@s.Id">@s.ProductName</a>
                    </td>
                    <td>@s.ProductSku</td>
                    <td>@s.Quantity</td>
                    <td>@s.MovementType</td>
                    <td>@s.Reason</td>
                    <td>@s.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button"
            class="btn btn-danger"
            id="openDeleteModal"
            disabled>
        Delete selected
    </button>
</form>
<div class="modal fade" id="confirmDeleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-top">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the selected stock movements?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>