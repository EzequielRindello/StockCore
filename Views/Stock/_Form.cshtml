@model StockMovementFormView

<form method="post" class="form-card">
    <input type="hidden" asp-for="StockMovement.Id" />
    <div class="mb-2">
        <label asp-for="StockMovement.ProductId"></label>
        <select asp-for="StockMovement.ProductId"
                asp-items="Model.Products"
                class="form-select">
            <option value="">Select product</option>
        </select>
        <span asp-validation-for="StockMovement.ProductId" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="StockMovement.Quantity"></label>
        <input asp-for="StockMovement.Quantity" class="form-control" type="number" />
        <span asp-validation-for="StockMovement.Quantity" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="StockMovement.MovementType"></label>
        <select asp-for="StockMovement.MovementType" class="form-select">
            <option value="">Select type</option>
            <option value="1">In</option>
            <option value="2">Out</option>
        </select>
        <span asp-validation-for="StockMovement.MovementType" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="StockMovement.Reason"></label>
        <textarea asp-for="StockMovement.Reason" class="form-control"></textarea>
    </div>
    <div class="form-actions">
        <div>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
            <button class="btn btn-primary">Save</button>
        </div>
    </div>
</form>