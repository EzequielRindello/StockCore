@{
    ViewData["Title"] = "Stock";
}

@model List<StockMovementList>

<div class="products-layout">
    <div class="filters">
        <form id="filterForm">
            <h5>Filters</h5>
            <div class="mb-3">
                <label>Product</label>
                <select class="form-select"
                        name="ProductId"
                        asp-items="ViewBag.Products">
                    <option value="">All</option>
                </select>
            </div>
            <div class="mb-3">
                <label>Movement Type</label>
                <select class="form-select" name="MovementType">
                    <option value="">All</option>
                    <option value="1">In</option>
                    <option value="2">Out</option>
                </select>
            </div>
            <div class="mb-3">
                <label>Date From</label>
                <input type="date" class="form-control" name="DateFrom" />
            </div>
            <div class="mb-3">
                <label>Date To</label>
                <input type="date" class="form-control" name="DateTo" />
            </div>
            <button type="submit" class="btn btn-primary w-100 mb-2">
                Search
            </button>
            <button type="button"
                    id="clearFilters"
                    class="btn btn-outline-secondary w-100">
                Clear filters
            </button>
        </form>
    </div>
    <div class="content">
        <div class="actions-btns">
            <button id="exportCsv" class="btn btn-secondary">
                <i class="bi bi-filetype-csv"></i> Export CSV
            </button>
            <a asp-action="Create" class="btn btn-danger">
                <i class="bi bi-plus"></i> Add movement
            </a>
        </div>
        <div id="stockTable">
            @await Html.PartialAsync("_StockMovementTable", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const tableContainer = document.getElementById("stockTable");
        const filterForm = document.getElementById("filterForm");
        async function loadTable(formData) {
            const res = await fetch("@Url.Action("Filter", "Stock")", {
                method: "POST",
                body: formData
            });
            tableContainer.innerHTML = await res.text();
            if (window.wireDeleteModal)
                wireDeleteModal();
        }
        filterForm.addEventListener("submit", e => {
            e.preventDefault();
            loadTable(new FormData(filterForm));
        });
        document.getElementById("clearFilters").addEventListener("click", () => {
            filterForm.reset();
            loadTable(new FormData());
        });
        document.getElementById("exportCsv").addEventListener("click", () => {
            const params = new URLSearchParams(new FormData(filterForm));
            window.location = "@Url.Action("ExportCsv", "Stock")?" + params.toString();
        });
    </script>
}