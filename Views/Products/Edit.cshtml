@model ProductFormView

<h2>Edit product</h2>

@if (ViewBag.Message != null)
{
    <div id="successEditAlert" class="alert alert-success py-1 px-2 small d-inline-block">
        @ViewBag.Message
    </div>
}

<partial name="_Form" model="Model" />

<a asp-action="Index">Back</a>

<script>
    setTimeout(function () {
        const alert = document.getElementById('successEditAlert');
        if (alert) {
            alert.remove();
        }
    }, 4000);
</script>
